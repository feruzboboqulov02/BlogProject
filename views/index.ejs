    <h1 class="author__heading" >Hey,sup? I'm Balu</h1>
    <p class="author__body"> Just A Web Developer</p>
    </div>

    <img src="/img/wall.png" alt="person classic" class="hero__image">

<section>
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post.id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
         <% }) %>
    </ul>
    <% if (nextPage !==null) { %>
        <a href="/?page=<%=nextPage%>" class="pagination">&lt; View Older Posts</a>
     <% } %>

</section>